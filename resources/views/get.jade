extends layouts/app.jade

block title
  title Get

block main
  #PreLoaderBar.loading-welcome.active.welcome-screen(style='background-color: #ffffff;')
    .progress
      .loading-bar.indeterminate(style='background-color: rgb(0, 0, 0);')
    .helper
    img(src='dist/images/welcome.png' style='max-width: 100px; max-height: 100px;')
  .sh-bar
    .sh-container(style='position: relative;')
      i#share-fab-button.sh-bar__share.icon.icon-event-share
      .sh-bar__name.ng-binding
      .sh-bar__company.ng-binding.ng-hide
  .sh-background(style='background-image: linear-gradient(rgb(0, 0, 0), rgb(243, 113, 37)); color: rgb(255, 255, 255);')
  #rootElement.sh-container
    div
      .sh-page(style='height: auto;')
        img.sh-avatar(src='dist/images/logo.png' alt='logo')
        .sh-page__title.ng-binding Dealify App
        div
          a.sh-button.ng-binding(href='http://dealify.info' target='_blank' style='border-color: rgba(255, 255, 255, 0.7);')
            | Learn more
        div
          a.sh-store-link(href='https://apps.apple.com/us/app/dealify/id1174749137?uo=4' target='_blank')
            img.sh-store-link__image(src='dist/images/apple-en.png' alt='')
        div
          a.sh-store-link(href='https://play.google.com/store/apps/details?id=freaktemplate.coupon&hl=en' target='_blank')
            img.sh-store-link__image(src='dist/images/google-en.png' alt='')
      #shareFab2.fabs
        .fixed-blur-bgd
          .overlya-share
          .chat
            .fab-body
              .icon-fab-close.icon-event-close
              .fab-header(style='color: rgb(243, 113, 37);') Share page
              ul
                li
                  i.icon-fab-share-facebook.icon-event-facebook
                  a(href='https://www.facebook.com/sharer/sharer.php?u=https://dealify.info/get.html' target='_blank') Facebook
                li
                  i.icon-fab-share-twitter.icon-event-twitter
                  a(href='https://twitter.com/share?url=https://dealify.info/get.html' target='_blank') Twitter
                li
                  i.iconFab.icon-fab-share-whatsapp
                  a.ssk.ssk-whatsapp(href='whatsapp://send?text=https://dealify.info/get.html') Whatsapp
                li
                  i.icon-fab-share-email
                  <a href="mailto:?subject=A friend has shared the Dealify App&body=Hey,%0D%0A I just downloaded the Dealify App on my mobile device. It's a free mobile search app available for Android phones and iPhones that delivers great local deals and discounts on dining, shopping, entertainment and more with just a few taps.%0D%0A Looking to score some deals and discounts? Download it today from http://dealify.info" target="_blank">Email</a>
                li
                  i.icon-fab-share-message
                  <a href="sms:?&body=Hey,%0D%0A I just downloaded the Dealify App on my mobile device. It's a free mobile search app available for Android phones and iPhones that delivers great local deals and discounts on dining, shopping, entertainment and more with just a few taps.%0D%0A Looking to score some deals and discounts? Download it today from http://dealify.info">SMS</a>                      

