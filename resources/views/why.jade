                      //-   i.icon-fab-share-message
                      //-   input#shortUrl.mr-2(value='http://qrco.de/bbIgAK' readonly='')
                      //-   #clipbord.d-none http://qrco.de/bbIgAK
                      //-   button#copyButton.copyButton(onclick="copyToClipboard('#clipbord')") Copy
                      //-   .ifCopySucceed.ng-hide.d-none.CopySucceed(ng-show='ifCopySucceed')
                      //-     | Text copied to the clipboard.
              a#share-fab-button.fab(style='background: rgb(0, 0, 0) none repeat scroll 0% 0%;')
                span.hidden-xs(style='color: white;')
                  i.prime.icon.icon-fab-share
                  | Share this page
                i.prime.icon.icon-fab-share.visible-xs(style='color: white;')





